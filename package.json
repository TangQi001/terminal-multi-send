{
  "name": "cursor-terminal-nexus",
  "displayName": "Cursor Terminal Nexus",
  "description": "Select multiple integrated terminals and broadcast a command in one shot.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cursorTerminalNexus.broadcast",
    "onCommand:cursorTerminalNexus.openControlPanel",
    "onView:cursorTerminalNexus.controlPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorTerminalNexus.broadcast",
        "title": "Cursor Terminal Nexus: Broadcast Command",
        "category": "Cursor Terminal Nexus"
      },
      {
        "command": "cursorTerminalNexus.openControlPanel",
        "title": "Cursor Terminal Nexus: Open Control Panel",
        "category": "Cursor Terminal Nexus"
      }
    ],
    "keybindings": [
      {
        "command": "cursorTerminalNexus.broadcast",
        "key": "alt+shift+b",
        "when": "terminalFocus || editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Cursor Terminal Nexus",
      "properties": {
        "cursorTerminalNexus.autoSelectRegex": {
          "type": "string",
          "default": "",
          "description": "Regex used to preselect terminals by terminal name."
        },
        "cursorTerminalNexus.requireConfirmBeforeBroadcast": {
          "type": "boolean",
          "default": false,
          "description": "Always show a confirmation dialog before sending commands."
        },
        "cursorTerminalNexus.enableSensitiveCommandGuard": {
          "type": "boolean",
          "default": true,
          "description": "Warn before sending potentially destructive commands."
        },
        "cursorTerminalNexus.sensitiveKeywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "rm -rf",
            "shutdown",
            "reboot",
            "mkfs",
            "format",
            "del /s",
            "poweroff"
          ],
          "description": "Case-insensitive keyword list for sensitive command detection."
        },
        "cursorTerminalNexus.waveThreshold": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "If selected terminals exceed this number, use wave sending with delay."
        },
        "cursorTerminalNexus.waveDelayMs": {
          "type": "number",
          "default": 20,
          "minimum": 0,
          "description": "Delay in milliseconds between sends when wave mode is enabled."
        },
        "cursorTerminalNexus.quickCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Preset commands shown before manual input."
        },
        "cursorTerminalNexus.enableHistory": {
          "type": "boolean",
          "default": true,
          "description": "Enable command history for quick reuse."
        },
        "cursorTerminalNexus.maxHistory": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "description": "Maximum number of history items persisted in global state."
        },
        "cursorTerminalNexus.autoSendEnabled": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, the control panel auto-sends text after input delay."
        },
        "cursorTerminalNexus.autoSendDelayMs": {
          "type": "number",
          "default": 800,
          "minimum": 200,
          "description": "Auto-send debounce delay in milliseconds."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "cursorTerminalNexus.controlPanel",
          "name": "Terminal Nexus",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.7.2"
  }
}
