{
  "name": "cursor-terminal-nexus",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.0.2",
  "publisher": "local",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TangQi001/terminal-multi-send.git"
  },
  "bugs": {
    "url": "https://github.com/TangQi001/terminal-multi-send/issues"
  },
  "homepage": "https://github.com/TangQi001/terminal-multi-send#readme",
  "engines": {
    "vscode": "^1.90.0"
  },
  "l10n": "./l10n",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cursorTerminalNexus.broadcast",
    "onCommand:cursorTerminalNexus.openControlPanel",
    "onView:cursorTerminalNexus.controlPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorTerminalNexus.broadcast",
        "title": "%command.broadcast.title%",
        "category": "%extension.category%"
      },
      {
        "command": "cursorTerminalNexus.openControlPanel",
        "title": "%command.openControlPanel.title%",
        "category": "%extension.category%"
      }
    ],
    "keybindings": [
      {
        "command": "cursorTerminalNexus.broadcast",
        "key": "alt+shift+b",
        "when": "terminalFocus || editorTextFocus"
      }
    ],
    "configuration": {
      "title": "%extension.config.title%",
      "properties": {
        "cursorTerminalNexus.autoSelectRegex": {
          "type": "string",
          "default": "",
          "description": "%config.autoSelectRegex.description%"
        },
        "cursorTerminalNexus.requireConfirmBeforeBroadcast": {
          "type": "boolean",
          "default": false,
          "description": "%config.requireConfirmBeforeBroadcast.description%"
        },
        "cursorTerminalNexus.enableSensitiveCommandGuard": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableSensitiveCommandGuard.description%"
        },
        "cursorTerminalNexus.sensitiveKeywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "rm -rf",
            "shutdown",
            "reboot",
            "mkfs",
            "format",
            "del /s",
            "poweroff"
          ],
          "description": "%config.sensitiveKeywords.description%"
        },
        "cursorTerminalNexus.waveThreshold": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "%config.waveThreshold.description%"
        },
        "cursorTerminalNexus.waveDelayMs": {
          "type": "number",
          "default": 20,
          "minimum": 0,
          "description": "%config.waveDelayMs.description%"
        },
        "cursorTerminalNexus.quickCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%config.quickCommands.description%"
        },
        "cursorTerminalNexus.enableHistory": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableHistory.description%"
        },
        "cursorTerminalNexus.maxHistory": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "description": "%config.maxHistory.description%"
        },
        "cursorTerminalNexus.autoSendEnabled": {
          "type": "boolean",
          "default": false,
          "description": "%config.autoSendEnabled.description%"
        },
        "cursorTerminalNexus.autoSendDelayMs": {
          "type": "number",
          "default": 800,
          "minimum": 200,
          "description": "%config.autoSendDelayMs.description%"
        },
        "cursorTerminalNexus.cliPrompts": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "(?:^|\\n)\\s*(?:codex|claude(?:\\s+code)?|qwen|gemini)?\\s*(?:>|❯|›|»|\\$)\\s*$",
            "(?:^|\\n)\\s*(?:You|Input)\\s*:\\s*$",
            "(?:^|\\n)[^\\n]{0,80}(?:❯|›|»)\\s*$"
          ],
          "description": "%config.cliPrompts.description%"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "cursorTerminalNexus.controlPanel",
          "name": "%view.controlPanel.name%",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit -p ./",
    "compile": "npm run check-types && node ./scripts/esbuild.js",
    "watch": "node ./scripts/esbuild.js --watch",
    "package": "npm run check-types && node ./scripts/esbuild.js --production",
    "vscode:prepublish": "npm run package",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.2"
  }
}
